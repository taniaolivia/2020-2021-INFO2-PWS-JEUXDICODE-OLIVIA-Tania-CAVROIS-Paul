{% extends 'base.html.twig' %}

{% block title %}Détail d'évènement{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <ul>
                <h1>Titre : {{ evt.titre }}</h1>
                <h2>Nombre max participants : {{ evt.nbpartmax }}</h2>
                <h2>Adresse : {{ evt.adresse }}</h2>

            {% for session in listeSessions %}
                <h1>Session : {{ session.titre }}</h1>
                <h2>Auteur : {{ session.description }}</h2>
            {% endfor %}
            <h1>Liste des participants :</h1>
            {% for membre in listeParticipants %}
                <h1>- {{ membre.prenom }} {{ membre.nom }}</h1>
            {% endfor %}

        </ul>
    </div>
{% endblock %}
